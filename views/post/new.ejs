<div id="sign-up">

  <div id="circle-title">NEW POST</div>

  <div id="circle-sign-up">
    <form id="form-post-new" action="/users/<%= req.session.curr_user %>/posts/create" method="post" accept-charset="utf-8">

      <input type="text" size="35" placeholder="Title" name="title" required/>
      <br><br>

      <textarea rows="10" cols="28" placeholder="Content" name="content" required></textarea>
      <br><br>

      <button id="button-submit" type="submit">Submit</button>

    </form>
  </div>

</div>
